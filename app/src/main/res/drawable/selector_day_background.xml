<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the day is pressed or selected (e.g., when clicked) -->
    <item android:drawable="@color/selected_day_background" android:state_pressed="true"/>
    <item android:drawable="@color/selected_day_background" android:state_selected="true"/>

    <!-- Default State: no interaction -->
    <item android:drawable="@android:color/white"/>
</selector>
